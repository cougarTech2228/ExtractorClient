{{> header}}
{{> nav}}
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Match List</h1>

            <a class="waves-effect waves-light btn-large green" href="{{BASEURI}}match/current"><i class="material-icons left">skip_next</i> Jump to Current Match</a>
            <a class="btn-floating btn-large waves-effect waves-light green right" href="{{BASEURI}}match/blank"><i class="material-icons">add</i></a>

            <ul class="collection with-header yellow accent-3 black-text">
                <li class="collection-item yellow accent-3 black-text">
                    <div>Match &num;
                        <div class="secondary-content" style="color: {{{teamColor}}};">{{team}}</div>
                    </div>
                </li>
                {{#matches}}
                    <li class="collection-item {{#current}}green lighten-3{{/current}}{{^current}}yellow accent-3 black-text{{/current}}"><a href="{{BASEURI}}match/{{match}}">
                        <div>Match &num;{{match}}
                            <div class="secondary-content" style="color: {{{teamColor}}};">{{teamNum}}</div>
                        </div>
                    </a></li>
                {{/matches}}
            </ul>
        </div>
    </div>
</div>
