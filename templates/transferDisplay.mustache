{{> header}}
<div class="container white">
    <div class="row">
        <div class="col s12">
            <div class="center-align" style="padding-top:150px;"><img src=""
                                                                      style="background-color: rgb(0,0,0); width: 450px; height: 450px;"
                                                                      id="qrDisplay"></div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <a class="waves-effect waves-light btn-large green" href="{{BASEURI}}transfer"><i
                    class="material-icons left">report_problem</i> Failed</a>
            <a class="waves-effect waves-light btn-large green" href="{{BASEURI}}transfer/finished"><i
                    class="material-icons left">swap_vert</i> Successful</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    var qrs = new Array();

        {{#qrs}}
        qrs[{{key}}] = "{{{src}}}";
        {{/qrs}}

    var curQR = -1;

    function nextQR() {
        curQR++;
        if (curQR == qrs.length) {
            curQR = 0;
        }

        document.getElementById('qrDisplay').src = qrs[curQR]
    }

    window.onload = function () {
        setInterval(nextQR, {{qrMS}})
    };
</script>
{{> footer}}
