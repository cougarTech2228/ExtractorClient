{{> header}}
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Transfer</h1>

            <div><img src="" style="width: 450px; height: 450px;" id="qrDisplay"></div>

            <a class="waves-effect waves-light btn-large" href="{{BASEURI}}transfer/finished"><i class="material-icons left">swap_vert</i> Finish Transfer</a>
        </div>
    </div>
</div>

<script type="text/javascript">

    var qrs = new Array();

        {{#qrs}}
        qrs[{{key}}] = "{{src}}";
        {{/qrs}}

    var curQR = 0;

    function nextQR() {
        curQR++;
        if (curQR == qrs.length) {
            curQR = 0;
        }

        document.getElementById('qrDisplay').src = qrs[curQR]
    }

    window.onload = function () {
        setInterval(nextQR, {{qrMS}})
    };

</script>
{{> footer}}
