<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Enter Configuration Password</h1>
            <form action="{{BASEURI}}pwd/check" method="post">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="pwd" name="pwd" type="password" class="validate" required>
                        <label for="pwd">Password</label>
                    </div>
                    <div class="col s6">
                        <button type="submit" class="btn btn-block waves-effect waves-light green">
                            <i class="material-icons left">lock</i> Enter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
