{{> header}}
{{> nav}}
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Pit Scouting</h1>

            <div class="row">
                <form class="col s12" action="{{BASEURI}}post/pit" method="post">
                    <div class="row">
                        <div class="input-field col s6">
                            <input placeholder="Team" id="teamNumber" name="teamNumber" type="number" class="validate"
                                   value="{{teamNumber}}" min="0" required>
                            <label for="teamNumber" class="white-text">Team Number</label>
                        </div>
                    </div>
                    <h3>Autonomous</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="autoRun" name="autoRun" type="checkbox"
                                   {{#autoRun}}checked{{/autoRun}}>
                            <label for="autoRun" class="white-text">Auto Run</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="autoSwitch" name="autoSwitch" type="checkbox"
                                   {{#autoSwitch}}checked{{/autoSwitch}}>
                            <label for="autoSwitch" class="white-text">Deliver to Switch</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="autoScale" name="autoScale" type="checkbox"
                                   {{#autoScale}}checked{{/autoScale}}>
                            <label for="autoScale" class="white-text">Deliver to Scale</label>
                        </div>
                    </div>
                    <h3>Tele-Operated</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="teleAllySwitch" name="teleAllySwitch" type="checkbox"
                                   {{#teleAllySwitch}}checked{{/teleAllySwitch}}>
                            <label for="teleAllySwitch" class="white-text">Deliver to Alliance Switch</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="teleOppSwitch" name="teleOppSwitch" type="checkbox"
                                   {{#teleOppSwitch}}checked{{/teleOppSwitch}}>
                            <label for="teleOppSwitch" class="white-text">Deliver to Opposition Switch</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="teleScale" name="teleScale" type="checkbox" {{#teleScale}}checked{{/teleScale}}>
                            <label for="teleScale" class="white-text">Deliver to Scale</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="teleVault" name="teleVault" type="checkbox" {{#teleVault}}checked{{/teleVault}}>
                            <label for="teleVault" class="white-text">Deliver to Vault</label>
                        </div>
                    </div>
                    <h3>End Game</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="endPark" name="endPark" type="checkbox" {{#endPark}}checked{{/endPark}}>
                            <label for="endPark" class="white-text">Able to Park</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="endClimb" name="endClimb" type="checkbox" {{#endClimb}}checked{{/endClimb}}>
                            <label for="endClimb" class="white-text">Able to Climb</label>
                        </div>
                    </div>
                    <h3>Main Role</h3>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleV" value="v"
                                       {{#mainRoleV}}checked{{/mainRoleV}}>
                                <label for="mainRoleV" class="white-text">Vault</label>
                            </p>
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleW" value="w"
                                       {{#mainRoleW}}checked{{/mainRoleW}}>
                                <label for="mainRoleW" class="white-text">Switch</label>
                            </p>
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleS" value="s"
                                       {{#mainRoleS}}checked{{/mainRoleS}}>
                                <label for="mainRoleS" class="white-text">Scale</label>
                            </p>
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleF" value="f"
                                       {{#mainRoleF}}checked{{/mainRoleF}}>
                                <label for="mainRoleF" class="white-text">"Flex"</label>
                            </p>
                        </div>
                    </div>
                    <h3>Cube Handling</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="cubePortal" name="cubePortal" type="checkbox"
                                   {{#cubePortal}}checked{{/cubePortal}}>
                            <label for="cubePortal" class="white-text">Portal</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="cubeGround" name="cubeGround" type="checkbox"
                                   {{#cubeGround}}checked{{/cubeGround}}>
                            <label for="cubeGround" class="white-text">Off ground</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="cubeRotate" name="cubeRotate" type="checkbox"
                                   {{#cubeRotate}}checked{{/cubeRotate}}>
                            <label for="cubeRotate" class="white-text">Rotate</label>
                        </div>
                    </div>
                    <h3>Robot</h3>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrain4" value="4"
                                       {{#driveTrain4}}checked{{/driveTrain4}}>
                                <label for="driveTrain4" class="white-text">4 wheel drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrain6" value="6"
                                       {{#driveTrain6}}checked{{/driveTrain6}}>
                                <label for="driveTrain6" class="white-text">6 wheel drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrainT" value="t"
                                       {{#driveTrainT}}checked{{/driveTrainT}}>
                                <label for="driveTrainT" class="white-text">Tank drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrainM" value="m"
                                       {{#driveTrainM}}checked{{/driveTrainM}}>
                                <label for="driveTrainM" class="white-text">Mecanum drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrainS" value="s"
                                       {{#driveTrainS}}checked{{/driveTrainS}}>
                                <label for="driveTrainS" class="white-text">Swerve drive</label>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="robotCamera" name="robotCamera" type="checkbox"
                                   {{#robotCamera}}checked{{/robotCamera}}>
                            <label for="robotCamera" class="white-text">Camera</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="robotVision" name="robotVision" type="checkbox"
                                   {{#robotVision}}checked{{/robotVision}}>
                            <label for="robotVision" class="white-text">Vision</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s10 offset-s1">
                            <button type="submit" class="btn btn-block waves-effect waves-light green"><i
                                    class="material-icons left">done</i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{> foot}}
{{> footer}}
