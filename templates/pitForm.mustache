{{> header}}
{{> nav}}
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Pit Scouting</h1>

            <div class="row">
                <form class="col s12" action="{{BASEURI}}post/pit" method="post">
                    <div class="row">
                        <div class="input-field col s6">
                            <input placeholder="Team" id="team_number" name="team" type="number" class="validate"
                                   value="{{team}}" min="0" required>
                            <label for="match_number">Team Number</label>
                        </div>
                    </div>
                    <h3>Autonomous</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="autoRun" name="autoRun" type="checkbox"
                                   {{#autoRun}}checked{{/autoRun}}>
                            <label for="autoRun">Auto Run</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="autoDeliverSwitch" name="autoDeliverSwitch" type="checkbox"
                                   {{#autoDeliverSwitch}}checked{{/autoDeliverSwitch}}>
                            <label for="autoDeliverSwitch">Deliver to Switch</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="autoDeliverScale" name="autoDeliverScale" type="checkbox"
                                   {{#autoDeliverScale}}checked{{/autoDeliverScale}}>
                            <label for="autoDeliverScale">Deliver to Scale</label>
                        </div>
                    </div>
                    <h3>Tele-Operated</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="teleAllySwitch" name="teleAllySwitch" type="checkbox"
                                   {{#teleAllySwitch}}checked{{/teleAllySwitch}}>
                            <label for="teleAllySwitch">Deliver to Alliance Switch</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="teleOppSwitch" name="teleOppSwitch" type="checkbox"
                                   {{#teleOppSwitch}}checked{{/teleOppSwitch}}>
                            <label for="teleOppSwitch">Deliver to Opposition Switch</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="teleScale" name="teleScale" type="checkbox" {{#teleScale}}checked{{/teleScale}}>
                            <label for="teleScale">Deliver to Scale</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="teleVault" name="teleVault" type="checkbox" {{#teleVault}}checked{{/teleVault}}>
                            <label for="teleVault">Deliver to Vault</label>
                        </div>
                    </div>
                    <h3>End Game</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="endPark" name="endPark" type="checkbox" {{#endPark}}checked{{/endPark}}>
                            <label for="endPark">Able to Park</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="endClimb" name="endClimb" type="checkbox" {{#endClimb}}checked{{/endClimb}}>
                            <label for="endClimb">Able to Climb</label>
                        </div>
                    </div>
                    <h3>Main Role</h3>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleVault" value="vault"
                                       {{#mainRoleVault}}checked{{/mainRoleVault}}>
                                <label for="mainRoleVault">Vault</label>
                            </p>
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleSwitch" value="switch"
                                       {{#mainRoleSwitch}}checked{{/mainRoleSwitch}}>
                                <label for="mainRoleSwitch">Switch</label>
                            </p>
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleScale" value="scale"
                                       {{#mainRoleScale}}checked{{/mainRoleScale}}>
                                <label for="mainRoleScale">Scale</label>
                            </p>
                            <p>
                                <input class="with-gap" name="mainRole" type="radio" id="mainRoleFlex" value="flex"
                                       {{#mainRoleFlex}}checked{{/mainRoleFlex}}>
                                <label for="mainRoleFlex">"Flex"</label>
                            </p>
                        </div>
                    </div>
                    <h3>Cube Handling</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="cubePortal" name="cubePortal" type="checkbox"
                                   {{#cubePortal}}checked{{/cubePortal}}>
                            <label for="cubePortal">Portal</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="cubeGround" name="cubeGround" type="checkbox"
                                   {{#cubeGround}}checked{{/cubeGround}}>
                            <label for="cubeGround">Off ground</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="cubeRotate" name="cubeRotate" type="checkbox"
                                   {{#cubeRotate}}checked{{/cubeRotate}}>
                            <label for="cubeRotate">Rotate</label>
                        </div>
                    </div>
                    <h3>Robot</h3>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrain4" value="4"
                                       {{#driveTrain4}}checked{{/driveTrain4}}>
                                <label for="driveTrain4">4 wheel drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrain6" value="6"
                                       {{#driveTrain6}}checked{{/driveTrain6}}>
                                <label for="driveTrain6">6 wheel drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrainT" value="t"
                                       {{#driveTrainT}}checked{{/driveTrainT}}>
                                <label for="driveTrainT">Tank drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrainM" value="m"
                                       {{#driveTrainM}}checked{{/driveTrainM}}>
                                <label for="driveTrainM">Mecanum drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="driveTrainS" value="s"
                                       {{#driveTrainS}}checked{{/driveTrainS}}>
                                <label for="driveTrainS">Swerve drive</label>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="robotCamera" name="robotCamera" type="checkbox"
                                   {{#robotCamera}}checked{{/robotCamera}}>
                            <label for="robotCamera">Camera</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="robotVision" name="robotVision" type="checkbox"
                                   {{#robotVision}}checked{{/robotVision}}>
                            <label for="robotVision">Vision</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s10 offset-s1">
                            <button type="submit" class="btn btn-block waves-effect waves-light green"><i
                                    class="material-icons left">done</i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{> foot}}
{{> footer}}
