{{> header}}
{{> nav}}
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Pit Scouting</h1>

            <div class="row">
                <form class="col s12" action="{{BASEURI}}post/pit" method="post">
                    <div class="row">
                        <div class="input-field col s6">
                            <input placeholder="Team" id="team_number" name="team" type="number" class="validate"
                                   value="{{team}}" min="0" required>
                            <label for="match_number">Team Number</label>
                        </div>
                    </div>
                    <h3>Autonomous</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="auto_fuel_high" name="autoFuelHigh" type="checkbox"
                                   {{#autoFuelHigh}}checked{{/autoFuelHigh}}>
                            <label for="auto_fuel_high">Fuel High</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="auto_fuel_low" name="autoFuelLow" type="checkbox"
                                   {{#autoFuelLow}}checked{{/autoFuelLow}}>
                            <label for="auto_fuel_low">Fuel Low</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="auto_baseline" name="autoBaseline" type="checkbox"
                                   {{#autoBaseline}}checked{{/autoBaseline}}>
                            <label for="auto_baseline">Baseline</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="auto_gear" name="autoGear" type="checkbox" {{#autoGear}}checked{{/autoGear}}>
                            <label for="auto_gear">Deliver gear</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="auto_multiple" name="autoMultiple" type="checkbox"
                                   {{#autoMultiple}}checked{{/autoMultiple}}>
                            <label for="auto_multiple">Multiple Routines</label>
                        </div>
                    </div>
                    <h3>Tele-operated</h3>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="tele_fuel_high" name="teleFuelHigh" type="checkbox"
                                   {{#teleFuelHigh}}checked{{/teleFuelHigh}}>
                            <label for="tele_fuel_high">Fuel High</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="tele_fuel_low" name="teleFuelLow" type="checkbox"
                                   {{#teleFuelLow}}checked{{/teleFuelLow}}>
                            <label for="tele_fuel_low">Fuel Low</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="tele_gear" name="teleGear" type="checkbox" {{#teleGear}}checked{{/teleGear}}>
                            <label for="tele_gear">Deliver gear</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="tele_tookoff" name="teleTakeOff" type="checkbox"
                                   {{#teleTakeOff}}checked{{/teleTakeOff}}>
                            <label for="tele_tookoff">Took Off</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input class="with-gap" name="teleRole" type="radio" id="tele_role_fuel" value="fuel"
                                       {{#teleRoleFuel}}checked{{/teleRoleFuel}}>
                                <label for="tele_role_fuel">Main goal is to deliver fuel</label>
                            </p>
                            <p>
                                <input class="with-gap" name="teleRole" type="radio" id="tele_role_gears" value="gear"
                                       {{#teleRoleGear}}checked{{/teleRoleGear}}>
                                <label for="tele_role_gears">Main goal is to deliver gears</label>
                            </p>
                        </div>
                    </div>
                    <h3>Robot</h3>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="drive_4" value="4"
                                       {{#driveTrain4}}checked{{/driveTrain4}}>
                                <label for="drive_4">4 wheel drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="drive_6" value="6"
                                       {{#driveTrain6}}checked{{/driveTrain6}}>
                                <label for="drive_6">6 wheel drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="drive_t" value="t"
                                       {{#driveTrainT}}checked{{/driveTrainT}}>
                                <label for="drive_t">Tank drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="drive_m" value="m"
                                       {{#driveTrainM}}checked{{/driveTrainM}}>
                                <label for="drive_m">Mecanum drive</label>
                            </p>
                            <p>
                                <input class="with-gap" name="driveTrain" type="radio" id="drive_s" value="s"
                                       {{#driveTrainS}}checked{{/driveTrainS}}>
                                <label for="drive_s">Swerve drive</label>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="robot_camera" name="robotCamera" type="checkbox"
                                   {{#robotCamera}}checked{{/robotCamera}}>
                            <label for="robot_camera">Camera</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="robot_vision" name="robotVision" type="checkbox"
                                   {{#robotVision}}checked{{/robotVision}}>
                            <label for="robot_vision">Vision</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="gear_ground" name="gearGround" type="checkbox"
                                   {{#gearGround}}checked{{/gearGround}}>
                            <label for="gear_ground">Can pick gears off the ground</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s10 offset-s1">
                            <button type="submit" class="btn btn-block waves-effect waves-light green"><i
                                    class="material-icons left">done</i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{> foot}}
{{> footer}}
