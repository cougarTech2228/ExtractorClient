<style>
    .input-field label {
        font-size: 1em !important;
    }

    h3 {
        padding-bottom: 18px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Match Scouting</h1>

            <div class="row">
                <form class="col s12" action="{{BASEURI}}post/match" method="post">
                    <div class="row">
                        <div class="input-field col s6">
                            <input placeholder="Match" id="matchNumber" name="matchNumber" type="number"
                                   class="validate"
                                   value="{{matchNumber}}" min="0" required>
                            <label for="matchNumber" class="white-text">Match Number</label>
                        </div>
                        <div class="input-field col s6">
                            <input placeholder="Team" id="teamNumber" name="teamNumber" type="number" class="validate"
                                   value="{{teamNumber}}" min="0" required>
                            <label for="teamNumber" class="white-text">Team Number</label>
                        </div>
                    </div>
                    <h3>Autonomous</h3>
                    <div class="row">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="autoInitLine" name="autoInitLine" type="checkbox"
                                       {{#autoInitLine}}checked{{/autoInitLine}}>
                                <label for="autoInitLine" class="white-text">Initiation Line</label>
                            </div>
                            <div class="col s6">
                                <div>
                                    <button class="btn-floating" type="button" onclick="decVal('autoUpper')">
                                        <i class="material-icons right">remove</i>
                                    </button>
                                    <div class="input-field inline">
                                        <input placeholder="0" id="autoUpper" name="autoUpper" type="number"
                                               class="validate" value="{{autoUpper}}" min="0" required>
                                        <label for="autoUpper" class="white-text">
                                            Upper
                                        </label>
                                    </div>
                                    <button class="btn-floating" type="button" onclick="incVal('autoUpper')">
                                        <i class="material-icons right">add</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6">
                                <div>
                                    <button class="btn-floating" type="button" onclick="decVal('autoLower')">
                                        <i class="material-icons right">remove</i>
                                    </button>
                                    <div class="input-field inline">
                                        <input placeholder="0" id="autoLower" name="autoLower" type="number"
                                               class="validate" value="{{autoLower}}" min="0" required>
                                        <label for="autoLower" class="white-text">
                                            Lower
                                        </label>
                                    </div>
                                    <button class="btn-floating" type="button" onclick="incVal('autoLower')">
                                        <i class="material-icons right">add</i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <h3>Tele-Operated</h3>
                        <div class="row">
                            <div class="col s6">
                                <div>
                                    <button class="btn-floating" type="button" onclick="decVal('teleUpper')">
                                        <i class="material-icons right">remove</i>
                                    </button>
                                    <div class="input-field inline">
                                        <input placeholder="0" id="teleUpper" name="teleUpper" type="number"
                                               class="validate" value="{{teleUpper}}" min="0" required>
                                        <label for="teleUpper" class="white-text">
                                            Upper
                                        </label>
                                    </div>
                                    <button class="btn-floating" type="button" onclick="incVal('teleUpper')">
                                        <i class="material-icons right">add</i>
                                    </button>
                                </div>
                            </div>
                            <div class="col s6">
                                <div>
                                    <button class="btn-floating" type="button" onclick="decVal('teleLower')">
                                        <i class="material-icons right">remove</i>
                                    </button>
                                    <div class="input-field inline">
                                        <input placeholder="0" id="teleLower" name="teleLower" type="number" class="validate"
                                               value="{{teleLower}}" min="0" required>
                                        <label for="teleLower" class="white-text">Lower</label>
                                    </div>
                                    <button class="btn-floating" type="button" onclick="incVal('teleLower')">
                                        <i class="material-icons right">add</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="teleRotational" name="teleRotational" type="checkbox"
                                       {{#teleRotational}}checked{{/teleRotational}}>
                                <label for="teleRotational" class="white-text">Rotational control</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="telePositional" name="telePositional" type="checkbox"
                                       {{#telePositional}}checked{{/telePositional}}>
                                <label for="telePositional" class="white-text">Positional control</label>
                            </div>
                        </div>
                        <h3>End Game</h3>
                        <div class="row">
                            <div class="col s12">
                                <p>
                                    <input class="with-gap" name="endGame" type="radio" id="endN"
                                           value="n" {{#endN}}checked{{/endN}} required>
                                    <label for="endN" class="white-text">None</label>
                                </p>
                                <p>
                                    <input class="with-gap" name="endGame" type="radio" id="endP"
                                           value="p" {{#endP}}checked{{/endP}} required>
                                    <label for="endP" class="white-text">Park</label>
                                </p>
                                <p>
                                    <input class="with-gap" name="endGame" type="radio" id="endH" value="h"
                                           {{#endH}}checked{{/endH}} required>
                                    <label for="endH" class="white-text">Hang</label>
                                </p>
                            </div>
                        </div>
                        <h3>Tags</h3>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="tagNoShow" name="tagNoShow" type="checkbox" value="true"
                                       {{#tagNoShow}}checked{{/tagNoShow}}>
                                <label for="tagNoShow" class="white-text">No Show</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="tagNoMove" name="tagNoMove" type="checkbox" value="true"
                                       {{#tagNoMove}}checked{{/tagNoMove}}>
                                <label for="tagNoMove" class="white-text">Didn't Move/Stopped</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="tagFlipped" name="tagFlipped" type="checkbox" value="true"
                                       {{#tagFlipped}}checked{{/tagFlipped}}>
                                <label for="tagFlipped" class="white-text">Flipped</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="tagStuck" name="tagStuck" type="checkbox" value="true"
                                       {{#tagStuck}}checked{{/tagStuck}}>
                                <label for="tagStuck" class="white-text">Stuck</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="tagFell" name="tagFell" type="checkbox" value="true"
                                       {{#tagFell}}checked{{/tagFell}}>
                                <label for="tagFell" class="white-text">Fell</label>
                            </div>
                        </div>
                        <h3>Overall Performance</h3>
                        <div class="row">
                            <div class="col s12">
                                <p>
                                    <input class="with-gap" name="performance" type="radio" id="prefC"
                                           value="c" {{#prefC}}checked{{/prefC}} required>
                                    <label for="prefC" class="white-text">Confused</label>
                                </p>
                                <p>
                                    <input class="with-gap" name="performance" type="radio" id="prefS" value="s"
                                           {{#prefS}}checked{{/prefS}} required>
                                    <label for="prefS" class="white-text">Slow</label>
                                </p>
                                <p>
                                    <input class="with-gap" name="performance" type="radio" id="prefE"
                                           value="e" {{#prefE}}checked{{/prefE}} required>
                                    <label for="prefE" class="white-text">Efficient</label>
                                </p>
                                <p>
                                    <input class="with-gap" name="performance" type="radio" id="prefP"
                                           value="p" {{#prefP}}checked{{/prefP}} required>
                                    <label for="prefP" class="white-text">Powerhouse</label>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s10 offset-s1">
                                <button type="submit" class="btn btn-block waves-effect waves-light green"><i
                                        class="material-icons left">done</i> Save
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function incVal(element) {
        document.getElementById(element).value++;
    }

    function decVal(element) {
        document.getElementById(element).value--;
    }
</script>
{{> foot}}
{{> footer}}
